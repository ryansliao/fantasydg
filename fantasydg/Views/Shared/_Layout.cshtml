<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - fantasydg</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/fantasydg.styles.css" asp-append-version="true" />
    <style>
    .nav-tabs .nav-link {
        color: black;             /* 🔹 Inactive tabs */
    }

    .nav-tabs .nav-link.active {
        color: black !important;  /* 🔹 Active tab */
        background-color: white;  /* Optional: remove blue background */
        border-color: #dee2e6 #dee2e6 white;
    }

    .nav-tabs .nav-link:hover {
        color: #333;              /* 🔹 On hover */
    }

    .nav-link .nav-link:hover {
        color: #333; /* 🔹 On hover */
    }
    </style>
</head>
@{
        var currentAction = ViewContext.RouteData.Values["action"]?.ToString();
        var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
        var isTournamentView = currentController == "Tournament" &&
                    (currentAction == "TournamentSummary" || currentAction == "TournamentSummaryPartial");
}
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">fantasydg</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="nav nav-tabs">
                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "Input" ? "active" : "")"
                               asp-controller="Tournament" asp-action="Input">
                                Input
                            </a>
                        </li>
                        
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle @(isTournamentView ? "active" : "")"
                               href="#"
                               id="tournamentDropdown"
                               role="button"
                               data-bs-toggle="dropdown"
                               aria-expanded="false">
                                Tournaments
                            </a>

                            <ul class="dropdown-menu" aria-labelledby="tournamentDropdown">
                                @foreach (var tournament in ViewBag.Tournaments as List<fantasydg.Models.TournamentDropdownItem>)
                                {
                                    <a class="nav-link dropdown-item" href="/Tournament/TournamentSummary?name=@Uri.EscapeDataString(tournament.Name)">
                                        @tournament.Name
                                    </a>
                                }
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link @(currentAction == "DatabaseResults" ? "active" : "")"
                               asp-controller="Tournament" asp-action="DatabaseResults">
                                Database
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - fantasydg - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.6.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
