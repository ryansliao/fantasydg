@model fantasydg.Models.TournamentInputView

<h2>Tournament Input </h2>

<form asp-controller="Tournament" asp-action="Save" method="post">
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="form-group">
        <label asp-for="TournamentId">Enter the tournament ID found in the PDGA Live URL of that tournament:</label>
        <input asp-for="TournamentId" class="form-control" />
        <span asp-validation-for="TournamentId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Division">Choose the division:</label>
        <select asp-for="Division" asp-items="Model.DivisionOptions" class="form-control"></select>
        <span asp-validation-for="Division" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
</form>