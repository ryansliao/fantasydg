@model List<fantasydg.Models.Player>

@{
    ViewData["Title"] = "Database Results";
    string selectedName = Context.Request.Query["name"];
    string selectedDivision = Context.Request.Query["division"];
}

<h2>Player Statistics</h2>

<!-- Filter Form -->
<form method="get" asp-action="DatabaseResults" asp-controller="Tournament" class="form-inline mb-3">
    <div class="form-group mr-2">
        <label for="tournamentName" class="mr-2">Tournament</label>
        <select name="name" id="tournamentName" class="form-control">
            <option value="">All</option>
            @foreach (var t in ViewBag.UniqueTournaments as List<TournamentDropdownItem>)
            {
                if (t.Name == Context.Request.Query["name"])
                {
                    <option value="@t.Name" selected>@($"{t.Date:yyyy-MM-dd} - {t.Name}")</option>
                }
                else
                {
                    <option value="@t.Name">@($"{t.Date:yyyy-MM-dd} - {t.Name}")</option>
                }
            }
        </select>
    </div>
    <div class="form-group mr-2">
        <label for="division" class="mr-2">Division</label>
        <select name="division" id="division" class="form-control">
            <option value="">All</option>
            @foreach (var div in ViewBag.UniqueDivisions as List<string>)
            {
                if (div == selectedDivision)
                {
                    <option value="@div" selected>@div</option>
                }
                else
                {
                    <option value="@div">@div</option>
                }
            }
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Filter</button>
</form>

@if (Model == null || !Model.Any())
{
    <p>No player data available.</p>
}
else
{
    <table class="table table-bordered table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Player</th>
                <th>Tournament</th>
                <th>Division</th>
                <th>Place</th>
                <th>Overall</th>
                <th>Fairway</th>
                <th>C1 In-Reg</th>
                <th>C2 In-Reg</th>
                <th>Parked</th>
                <th>Scramble</th>
                <th>C1 Putting</th>
                <th>C1x Putting</th>
                <th>C2 Putting</th>
                <th>OB</th>
                <th>Birdie+</th>
                <th>Double Bogey+</th>
                <th>Bogey+</th>
                <th>Par</th>
                <th>Birdie</th>
                <th>Eagle+</th>
                <th>Avg. Putt Dist.</th>
                <th>SG Total</th>
                <th>SG Tee->Green</th>
                <th>SG Putting</th>
                <th>SG C1x</th>
                <th>SG C2</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var player in Model)
        {
            <tr>
                <td>@player.Name</td>
                <td>@player.Round?.Tournament?.Name</td>
                <td>@player.Round?.Tournament?.Division</td>
                <td>@player.Place</td>
                <td>@player.TournamentScore</td>
                <td>@player.Fairway</td>
                <td>@player.C1InReg</td>
                <td>@player.C2InReg</td>
                <td>@player.Parked</td>
                <td>@player.Scramble</td>
                <td>@player.C1Putting</td>
                <td>@player.C1xPutting</td>
                <td>@player.C2Putting</td>
                <td>@player.ObRate</td>
                <td>@player.BirdiePlus</td>
                <td>@player.DoubleBogeyPlus</td>
                <td>@player.BogeyPlus</td>
                <td>@player.Par</td>
                <td>@player.Birdie</td>
                <td>@player.EaglePlus</td>
                <td>@player.PuttDistance</td>
                <td>@player.StrokesGainedTotal</td>
                <td>@player.StrokesGainedTeeToGreen</td>
                <td>@player.StrokesGainedPutting</td>
                <td>@player.StrokesGainedC1xPutting</td>
                <td>@player.StrokesGainedC2Putting</td>
            </tr>
        }
        </tbody>
    </table>
}