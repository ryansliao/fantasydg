@model IEnumerable<fantasydg.Models.RoundScore>

<div class="table-scroll-container">
    <div class="table-scroll-top"></div>
    <div class="table-scroll-wrapper">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Player</th>                    
                    <th>Total</th>
                    <th>Rd.</th>
                    <th>Birdie-</th>
                    <th>Eagle-</th>
                    <th>Bogey+</th>
                    <th>Dbl Bogey+</th>
                    <th>Fairway</th>
                    <th>C1 Reg</th>
                    <th>C2 Reg</th>
                    <th>Parked</th>
                    <th>Scramble</th>
                    <th>Out of Bounds</th>
                    <th>C1x Putting</th>
                    <th>C2 Putting</th>
                    <th>Putt Distance</th>
                    <th>Strokes Gained</th>
                    <th>Gained Putting</th>
                    <th>Gained Tee→Green</th>
                    <th>Gained C1x</th>
                    <th>Gained C2</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var rs in Model)
                {
                    <tr>
                        <td>@rs.RunningPlace</td>
                        <td>@rs.Player.Name</td>
                        <td>@rs.RunningToPar</td>
                        <td>@rs.RoundToPar</td>
                        <td>@rs.BirdieMinus%</td>
                        <td>@rs.EagleMinus%</td>
                        <td>@rs.BogeyPlus%</td>
                        <td>@rs.DoubleBogeyPlus%</td>
                        <td>@rs.Fairway%</td>
                        <td>@rs.C1InReg%</td>
                        <td>@rs.C2InReg%</td>
                        <td>@rs.Parked%</td>
                        <td>@rs.Scramble%</td>
                        <td>@rs.ObRate%</td>
                        <td>@rs.C1xPutting%</td>
                        <td>@rs.C2Putting%</td>
                        <td>@rs.PuttDistance</td>
                        <td>@rs.StrokesGainedTotal</td>
                        <td>@rs.StrokesGainedPutting</td>
                        <td>@rs.StrokesGainedTeeToGreen</td>
                        <td>@rs.StrokesGainedC1xPutting</td>
                        <td>@rs.StrokesGainedC2Putting</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="table-scroll-bottom"></div>
</div>